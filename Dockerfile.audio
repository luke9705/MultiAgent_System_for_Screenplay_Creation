# Dockerfile for Audio Service (MusicGen) - CPU only
FROM python:3.10-slim

WORKDIR /app

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libsndfile1 \
    git \
    curl \
    pkg-config \
    libavformat-dev \
    libavcodec-dev \
    libavdevice-dev \
    libavutil-dev \
    libavfilter-dev \
    libswscale-dev \
    libswresample-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements-audio.txt .

# Install dependencies separately to bypass av==11.0.0 conflict
# 1. Install PyTorch CPU
RUN pip install --no-cache-dir --extra-index-url https://download.pytorch.org/whl/cpu \
    torch==2.1.0+cpu torchaudio==2.1.0+cpu

# 2. Install av with pre-built wheel (before audiocraft)
RUN pip install --no-cache-dir av>=14.0.0

# 3. Install audiocraft WITHOUT its dependencies (to skip av==11.0.0)
RUN pip install --no-cache-dir --no-deps audiocraft==1.3.0

# 3.5. Install omegaconf (required by audiocraft but skipped due to --no-deps)
RUN pip install --no-cache-dir omegaconf

# 4. Install remaining dependencies (WITH their deps)
RUN pip install --no-cache-dir -r requirements-audio.txt

# Copy application code
COPY audio_app.py .

# Expose port
EXPOSE 7860

# Run the audio server (bind to 0.0.0.0 for Docker)
CMD ["python", "-c", "import audio_app; audio_app.demo.launch(server_name='0.0.0.0', server_port=7860, show_error=True, share=False)"]
